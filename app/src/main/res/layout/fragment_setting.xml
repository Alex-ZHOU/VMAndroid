<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAppBackground"
    android:orientation="vertical">

    <!--修改用户头像-->
    <RelativeLayout
        android:id="@+id/setting_head_portrait_rl"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:background="@android:color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:text="@string/head_portrait"/>

        <ImageView
            android:id="@+id/setting_head_portrait_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:contentDescription="@string/head_portrait"
            android:src="@drawable/vm_android_app_icon"/>
    </RelativeLayout>

    <!--修改用户昵称-->
    <RelativeLayout
        android:id="@+id/setting_change_nickname_rl"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/main_item_margin_top"
        android:background="@android:color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:text="@string/change_nickname"/>

        <TextView
            android:id="@+id/setting_nickname_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"/>
    </RelativeLayout>


</LinearLayout>