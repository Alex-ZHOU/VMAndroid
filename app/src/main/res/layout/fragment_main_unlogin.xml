<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_theme_style">


    <Button
        android:id="@+id/main_login_immediate_experience_btn"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/button_background_color"
        android:text="@string/sign_up"
        android:textColor="@color/button_text_color"/>

    <Button
        android:id="@+id/main_unlogin_login_btn"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/main_login_immediate_experience_btn"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/main_login_immediate_experience_btn"
        android:layout_marginStart="50dp"
        android:background="@drawable/button_background_color"
        android:text="@string/login"
        android:textColor="@color/button_text_color"/>



</RelativeLayout>