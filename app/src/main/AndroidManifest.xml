<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.alex.vmandroid">


    <!--
      ~ 麦克风申请权限
      ~ 用处：录音、噪声获取
      ~ 是否需要向用户申请权限：是
    -->
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>


    <!--允许程序打开网络套接字-->
    <uses-permission android:name="android.permission.INTERNET"/>
    <!--允许程序设置内置sd卡的写权限-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <!--允许程序获取网络状态-->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <!--允许程序访问WiFi网络信息-->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <!--允许程序读写手机状态和身份-->
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <!--允许程序访问CellID或WiFi热点来获取粗略的位置-->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>

    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>

    <application
        android:name=".VMApplication"
        android:allowBackup="false"
        android:icon="@drawable/vm_android_app_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!--高德地图-->
        <meta-data
            android:name="com.amap.api.v2.apikey"
            android:value="${TENCENT_MAP_KEY}"/>

        <!--
          ~ 记录分贝时需要的服务
          ~ 前台服务
        -->
        <service
            android:name=".services.RecordDBService"
            android:enabled="true"
            android:process="system"/>

        <!--
          ~ 接收RecordDBService发出广播
        -->
        <receiver
            android:name=".receivers.RecordDBReceiver"
            android:enabled="true"
            android:process="system"/>

        <activity
            android:name=".display.main.MainActivity"
            android:theme="@style/StartAppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".display.voice.db.RecordDBActivity"/>

        <activity
            android:name=".display.weather.location.LocationWeatherActivity"
            android:theme="@style/AppTheme"/>

        <activity
            android:name=".display.exhibition.history.HistoryActivity"/>


        <activity
            android:name=".display.gadget.GadgetActivity"/>
        <activity
            android:name=".display.weather.inquiry.InquiryWeatherActivity"/>
        <activity
            android:name=".display.voice.tape.SoundRecordingActivity"/>

        <service
            android:name="com.amap.api.location.APSService">
        </service>

    </application>

</manifest>