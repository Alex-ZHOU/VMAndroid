<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.alex.vmandroid">


    <!--麦克风申请权限-->
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>


    <!--允许程序打开网络套接字-->
    <uses-permission android:name="android.permission.INTERNET"/>
    <!--允许程序设置内置sd卡的写权限-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <!--允许程序获取网络状态-->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <!--允许程序访问WiFi网络信息-->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <!--允许程序读写手机状态和身份-->
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <!--允许程序访问CellID或WiFi热点来获取粗略的位置-->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>

    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>

    <application
        android:allowBackup="false"
        android:icon="@drawable/vm_android_app_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!--高德地图-->
        <meta-data
            android:name="com.amap.api.v2.apikey"
            android:value="${TENCENT_MAP_KEY}"/>

        <activity
            android:name=".display.main.MainActivity"
            android:theme="@style/StartAppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".display.weather.location.LocationWeatherActivity"
            android:theme="@style/AppTheme"/>

        <activity
            android:name=".display.history.HistoryActivity"/>


        <activity
            android:name=".display.gadget.GadgetActivity"/>
        <activity
            android:name=".display.weather.inquiry.InquiryWeatherActivity"/>

        <service android:name="com.amap.api.location.APSService">
        </service>

    </application>

</manifest>